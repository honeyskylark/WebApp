@model WebApp.Models.Catalog
@using WebApp.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Adding");
}

<ol class="breadcrumb">
    <li><a asp-area="" asp-action="Index" asp-controller="Home">@ResourceProvider.GetResource("Home")</a></li>
    <li><a asp-area="Administration" asp-action="Index" asp-controller="Catalogs">@ResourceProvider.GetResource("Catalogs")</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div class="container-fluid">
    <form asp-action="Create" asp-controller="Catalogs">
        <div class="panel panel-primary">
            <div class="panel-heading"><span class="glyphicon glyphicon-plus"></span> @ResourceProvider.GetResource("Adding")</div>
            <div class="panel-body">
                <div class="validation" asp-validation-summary="ModelOnly"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">@ResourceProvider.GetResource("Catalog")</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-for="Name" />
                </div>

                <div class="form-group">
                    <label asp-for="SubSectionId" class="control-label">@ResourceProvider.GetResource("SubSection")</label>
                    <select asp-for="SubSectionId" class="form-control" asp-items="ViewBag.SubSectionId"></select>
                </div>

            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">@ResourceProvider.GetResource("Add")</button>
        </div>
        <a class="btn btn-primary btn-lg btn-block" asp-area="Administration" asp-action="Index" asp-controller="Catalogs">@ResourceProvider.GetResource("Back")</a>
    </form>
</div>

