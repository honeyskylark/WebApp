@model WebApp.Models.User
@using WebApp.Areas.Administration.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Adding");
}
<ol class="breadcrumb">
    <li><a asp-area="" asp-action="Index" asp-controller="Home">@ResourceProvider.GetResource("Home")</a></li>
    <li><a asp-area="Administration" asp-action="Index" asp-controller="Users">@ResourceProvider.GetResource("Users")</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div class="container-fluid">
    <form asp-action="Create">
        <div class="panel panel-primary">
            <div class="panel-heading">@ResourceProvider.GetResource("Adding")</div>
            <div class="panel-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">@ResourceProvider.GetResource("FirstName")</label>
                    <input type="text" asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" />
                </div>
                <div class="form-group">
                    <label asp-for="Patronymic" class="control-label">@ResourceProvider.GetResource("Patronymic")</label>
                    <input type="text" asp-for="Patronymic" class="form-control" />
                    <span asp-validation-for="Patronymic" />
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">@ResourceProvider.GetResource("LastName")</label>
                    <input type="text" asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" />
                </div>
                <div class="form-group">
                    <label asp-for="Login" class="control-label">@ResourceProvider.GetResource("Login")</label>
                    <input type="text" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" />
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label">@ResourceProvider.GetResource("Password")</label>
                    <input type="text" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" />
                </div>
                <div class="form-group">
                    <label asp-for="RoleId" class="control-label">@ResourceProvider.GetResource("Role")</label>
                    <select asp-for="RoleId" class="form-control" asp-items="ViewBag.RoleId"></select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">@ResourceProvider.GetResource("Add")</button>
        </div>
        <a asp-action="Index" asp-area="Administration" asp-controller="Users" class="btn btn-primary btn-lg btn-block" role="button">@ResourceProvider.GetResource("Users")</a>
    </form>
</div>



