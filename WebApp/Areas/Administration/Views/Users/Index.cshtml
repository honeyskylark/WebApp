@model IEnumerable<WebApp.Models.User>
@using WebApp.Areas.Administration.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Users");
}
<ol class="breadcrumb">
    <li><a asp-area="" asp-action="Index" asp-controller="Home">@ResourceProvider.GetResource("Home")</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<div class="container-fluid">
    <div class="panel panel-primary">
        <div class="panel-heading"><span class="glyphicon glyphicon-link"></span> @ViewBag.Title</div>
        <table class="table">
            <tr>
                <th>@ResourceProvider.GetResource("FirstName")</th>
                <th>@ResourceProvider.GetResource("LastName")</th>
                <th>@ResourceProvider.GetResource("Action")</th>
            </tr>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.FirstName</td>
                    <td>@user.LastName</td>
                    <td>
                        <a asp-area="Administration" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                        <a asp-area="Administration" asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id"><span class="glyphicon glyphicon-pencil"></span></a> |
                        <a asp-area="Administration" asp-controller="Users" asp-action="Delete" asp-route-id="@user.Id"><span class="glyphicon glyphicon-trash"></span></a>
                    </td>
                </tr>
            }
        </table>
    </div>
    <div class="form-group">
        <a asp-controller="Users" asp-area="Administration" asp-action="Create"  class="btn btn-primary btn-lg btn-block" role="button">@ResourceProvider.GetResource("Add")</a>
    </div>
</div>
