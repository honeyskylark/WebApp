@model WebApp.Models.Resource
@using WebApp.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Adding");
}
<ol class="breadcrumb">
    <li><a asp-area="" asp-action="Index" asp-controller="Home">@ResourceProvider.GetResource("Home")</a></li>
    <li><a asp-area="Administration" asp-action="Index" asp-controller="Resources">@ResourceProvider.GetResource("Resources")</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div class="container-fluid">
    <form asp-action="Create">
        <div class="panel panel-primary">
            <div class="panel-heading">@ResourceProvider.GetResource("Adding")</div>
            <div class="panel-body">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Key" class="control-label">@ResourceProvider.GetResource("Key")</label>
                    <input type="text" asp-for="Key" class="form-control" />
                    <span asp-validation-for="Key" />
                </div>
                <div class="form-group">
                    <label asp-for="Value" class="control-label">@ResourceProvider.GetResource("Value")</label>
                    <input type="text" asp-for="Value" class="form-control" />
                    <span asp-validation-for="Value" />
                </div>
                <div class="form-group">
                    <label asp-for="LanguageId" class="control-label">@ResourceProvider.GetResource("Language")</label>
                    <select asp-for="LanguageId" class="form-control" asp-items="ViewBag.LanguageId"></select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">@ResourceProvider.GetResource("Add")</button>
        </div>
        <a asp-action="Index" asp-area="Administration" asp-controller="Resources" class="btn btn-primary btn-lg btn-block" role="button">@ResourceProvider.GetResource("Back")</a>
    </form>
</div>