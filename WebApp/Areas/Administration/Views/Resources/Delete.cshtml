@model WebApp.Models.Resource
@using WebApp.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Delete");
}
<ol class="breadcrumb">
    <li><a asp-area="" asp-action="Index" asp-controller="Home">@ResourceProvider.GetResource("Home")</a></li>
    <li><a asp-area="Administration" asp-action="Index" asp-controller="Resources">@ResourceProvider.GetResource("Resources")</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>
<div class="container-fluid">
    <div class="panel panel-primary">
        <div class="panel-heading"><span class="glyphicon glyphicon-trash"></span> @ResourceProvider.GetResource("ConfirmDelete")</div>
        <table class="table">
            <tbody>
                <tr>
                    <th scope="row">@ResourceProvider.GetResource("Identifier")</th>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <th scope="row">@ResourceProvider.GetResource("Key") </th>
                    <td>@Model.Key</td>
                </tr>
                <tr>
                    <th scope="row">@ResourceProvider.GetResource("Value") </th>
                    <td>@Model.Value</td>
                </tr>
                <tr>
                    <th scope="row">@ResourceProvider.GetResource("Language") </th>
                    <td>@Model.Language.Name</td>
                </tr>
            </tbody>
        </table>
    </div>
    <form asp-action="Delete" method="post">
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="@ResourceProvider.GetResource("Delete")" />
        </div>
        <a asp-action="Index" asp-area="Administration" asp-controller="Resources" class="btn btn-primary btn-lg btn-block" Section="button">@ResourceProvider.GetResource("Back")</a>
    </form>
</div>