@model IEnumerable<WebApp.Models.Contact>
@using WebApp.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Clients");
}
<br />
<div class="container-fluid">
    <div class="panel panel-primary">
        <div class="panel-heading"><span class="glyphicon glyphicon-link"></span> @ViewBag.Title</div>
        <table class="table">
            <tr>
                <th>@ResourceProvider.GetResource("FirstName")</th>
                <th>@ResourceProvider.GetResource("Patronymic")</th>
                <th>@ResourceProvider.GetResource("LastName")</th>
                <th>@ResourceProvider.GetResource("Company")</th>
                <th>@ResourceProvider.GetResource("Phone")</th>
                <th>@ResourceProvider.GetResource("Actions")</th>
            </tr>
            @foreach (var Contact in Model)
            {
            <tr>
                <td>@Contact.FirstName</td>
                <td>@Contact.Patronymic</td>
                <td>@Contact.LastName</td>
                <td>@Contact.Company.Name</td>
                <td>@Contact.Phone</td>
                <td>
                    <a asp-area="eCore" asp-controller="Contacts" asp-action="Details" asp-route-id="@Contact.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                    <a asp-area="eCore" asp-controller="Contacts" asp-action="Edit" asp-route-id="@Contact.Id"><span class="glyphicon glyphicon-pencil"></span></a> |
                    <a asp-area="eCore" asp-controller="Contacts" asp-action="Delete" asp-route-id="@Contact.Id"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
            }
        </table>
    </div>
    <div class="form-group">
        <a asp-controller="Contacts" asp-area="eCore" asp-action="Create"  class="btn btn-primary btn-lg btn-block" role="button">@ResourceProvider.GetResource("Add")</a>
    </div>
</div>
