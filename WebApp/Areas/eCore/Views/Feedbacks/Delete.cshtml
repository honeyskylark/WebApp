@model WebApp.Models.Feedback
@using WebApp.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Feedback");
}
<div class="container crud-container">
    <ol class="breadcrumb">
        <li><a asp-area="eCore" asp-action="Index" asp-controller="Deals">@ResourceProvider.GetResource("Deals")</a></li>
        <li><a asp-area="eCore" asp-action="Index" asp-controller="Feedbacks">@ResourceProvider.GetResource("Feedbacks")</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading"><span class="glyphicon glyphicon-trash"></span> @ResourceProvider.GetResource("ConfirmDelete")</div>
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("FirstName") </th>
                        <td>@Model.Name</td>
                    </tr>
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Email") </th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Phone") </th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Message") </th>
                        <td>@Model.Message</td>
                    </tr>
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Product") </th>
                        <td>@Model.Product.Name</td>
                    </tr>
                </tbody>
            </table>
        </div>
        <form asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-primary btn-lg btn-block" value="@ResourceProvider.GetResource("Delete")" />
            </div>
            <a asp-action="Index" asp-area="eCore" asp-controller="Feedbacks" class="btn btn-primary btn-lg btn-block" role="button">@ResourceProvider.GetResource("Back")</a>
        </form>
    </div>
</div>
