@model WebApp.Models.Feedback
@using WebApp.Services
@{
    ViewBag.Title = Model.Name;
}
<div class="container crud-container">
    <ol class="breadcrumb">
        <li><a asp-area="eCore" asp-action="Index" asp-controller="Deals">@ResourceProvider.GetResource("Deals")</a></li>
        <li><a asp-area="eCore" asp-action="Index" asp-controller="Feedbacks">@ResourceProvider.GetResource("Feedback")</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading"><span class="glyphicon glyphicon-eye-open"></span> @ResourceProvider.GetResource("ExtendedInfo")</div>
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("FirstName") </th>
                        <td>@Model.Name</td>
                    </tr>
                    @if (Model.Email != null)
                    {
                        <tr>
                            <th scope="row">@ResourceProvider.GetResource("Email") </th>
                            <td>@Model.Email</td>
                        </tr>
                    }                 
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Phone") </th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Message") </th>
                        <td>@Model.Message</td>
                    </tr>
                    @if(Model.Product != null)
                    {
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Product")</th>
                        <td>
                            <p><b>@ResourceProvider.GetResource("Catalog")</b> @Model.Product.Catalog.Name</p>
                            <p><b>@ResourceProvider.GetResource("Product")</b> @Model.Product.Name</p>
                            <p><b>@ResourceProvider.GetResource("Price")</b> @Model.Product.Price @Model.Product.Currency.Name \ @Model.Product.Unit.Name</p>
                        </td>
                    </tr>
                    }                   
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <a asp-action="Edit" class="btn btn-primary btn-lg btn-block" asp-route-id="@Model.Id">@ResourceProvider.GetResource("Edit")</a>
        </div>
        <a asp-area="eCore" asp-action="Index" asp-controller="Feedbacks" class="btn btn-primary btn-lg btn-block" role="button">@ResourceProvider.GetResource("Back")</a>
    </div>
</div>
