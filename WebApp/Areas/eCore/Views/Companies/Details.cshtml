@model WebApp.Models.Company
@using WebApp.Services
@{
    ViewBag.Title = Model.Name;
}
<div class="container crud-container">
    <ol class="breadcrumb">
        <li><a asp-area="eCore" asp-action="Index" asp-controller="Deals">@ResourceProvider.GetResource("Deals")</a></li>
        <li><a asp-area="eCore" asp-action="Index" asp-controller="Companies">@ResourceProvider.GetResource("Companies")</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading"><span class="glyphicon glyphicon-eye-open"></span> @ResourceProvider.GetResource("ExtendedInfo")</div>
            <table class="table">
                <tbody>
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Company") </th>
                        <td>@Model.Name</td>
                    </tr>                  
                    @if(@Model.Phone != null)
                    {
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Phone") </th>
                        <td>@Model.Phone</td>
                    </tr>
                    }
                    @if(@Model.Address != null)
                    { 
                        
                    <tr>
                        <th scope="row">@ResourceProvider.GetResource("Address") </th>
                        <td>@Model.Address</td>
                    </tr>
                    }                
                </tbody>
            </table>
        </div>
        <div class="form-group">
            <a asp-action="Edit" class="btn btn-primary btn-lg btn-block" asp-route-id="@Model.Id">@ResourceProvider.GetResource("Edit")</a>
        </div>
        <a asp-area="eCore" asp-action="Index" asp-controller="Companies" class="btn btn-primary btn-lg btn-block" role="button">@ResourceProvider.GetResource("Back")</a>
    </div>
</div>
