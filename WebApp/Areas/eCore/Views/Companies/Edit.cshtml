@model WebApp.Models.Company
@using WebApp.Services
@{
    ViewBag.Title = Model.Name;
}
<br />
<div class="container">
    <ol class="breadcrumb">
        <li><a asp-area="" asp-action="Index" asp-controller="Home">@ResourceProvider.GetResource("Home")</a></li>
        <li><a asp-area="eCore" asp-action="Index" asp-controller="Companies">@ResourceProvider.GetResource("Companies")</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>

    <div class="container-fluid">
        <form asp-action="Edit">
            <div class="panel panel-primary">
                <div class="panel-heading"><span class="glyphicon glyphicon-pencil"></span> @ResourceProvider.GetResource("Editing")</div>
                <div class="panel-body">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">@ResourceProvider.GetResource("Company")</label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Phone" class="control-label">@ResourceProvider.GetResource("Phone")</label>
                        <input type="text" asp-for="Phone" class="form-control" />
                        <span asp-validation-for="Phone" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Address" class="control-label">@ResourceProvider.GetResource("Address")</label>
                        <input type="text" asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" />
                    </div>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">@ResourceProvider.GetResource("Edit")</button>
            </div>
            <a asp-area="eCore" asp-action="Index" asp-controller="Companies" class="btn btn-primary btn-lg btn-block" role="button">@ResourceProvider.GetResource("Back")</a>
        </form>
    </div>
</div>



