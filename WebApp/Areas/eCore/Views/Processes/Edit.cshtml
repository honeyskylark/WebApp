@model WebApp.Models.Process
@using WebApp.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Editing");
}
<br />
<div class="container">
    <ol class="breadcrumb">
        <li><a asp-area="" asp-action="Index" asp-controller="Home">@ResourceProvider.GetResource("Home")</a></li>
        <li><a asp-area="eCore" asp-action="Index" asp-controller="Deals">@ResourceProvider.GetResource("Deals")</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <form asp-area="eCore" asp-controller="Processes" asp-action="Edit">
            <div class="panel panel-primary">
                <div class="panel-heading"><span class="glyphicon glyphicon-pencil"></span> @ResourceProvider.GetResource("Editing")</div>
                <div class="panel-body">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label">@ResourceProvider.GetResource("Title")</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <span asp-validation-for="Title" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Order" class="control-label">@ResourceProvider.GetResource("Order")</label>
                        <input type="number" asp-for="Order" class="form-control" />
                        <span asp-validation-for="Order" />
                    </div>

                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">@ResourceProvider.GetResource("Edit")</button>
                <a asp-area="eCore" asp-action="Delete" asp-controller="Processes" class="btn btn-primary btn-lg btn-block"  asp-route-id="@Model.Id" role="button">@ResourceProvider.GetResource("Delete")</a>
            </div>
            <a asp-area="eCore" asp-action="Index" asp-controller="Deals" class="btn btn-primary btn-lg btn-block" role="button">@ResourceProvider.GetResource("Back")</a>
        </form>
    </div>

</div>
  


