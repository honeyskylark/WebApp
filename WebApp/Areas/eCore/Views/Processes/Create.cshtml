@model WebApp.Models.Process
@using WebApp.Services
@{
    ViewBag.Title = ResourceProvider.GetResource("Adding");
}
<br />
<div class="container">
    <ol class="breadcrumb">
        <li><a asp-area="" asp-action="Index" asp-controller="Home">@ResourceProvider.GetResource("Home")</a></li>
        <li><a asp-area="eCore" asp-action="Index" asp-controller="Deals">@ResourceProvider.GetResource("Deals")</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
    <div class="container-fluid">
        <form asp-area="eCore" asp-controller="Processes" asp-action="Create">
            <div class="panel panel-primary">
                <div class="panel-heading"><span class="glyphicon glyphicon-plus"></span> @ResourceProvider.GetResource("Adding")</div>
                <div class="panel-body">
                    <div class="validation" asp-validation-summary="ModelOnly"></div>

                    <div class="form-group">
                        <label asp-for="Title" class="control-label">@ResourceProvider.GetResource("Title")</label>
                        <input type="text" asp-for="Title" class="form-control" />
                        <span asp-for="Name" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Order" class="control-label">@ResourceProvider.GetResource("Order")</label>
                        <input type="number" asp-for="Order" class="form-control" />
                        <span asp-for="Name" />
                    </div>

                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-lg btn-block">@ResourceProvider.GetResource("Add")</button>
            </div>
            <a class="btn btn-primary btn-lg btn-block" asp-area="eCore" asp-action="Index" asp-controller="Deals">@ResourceProvider.GetResource("Back")</a>
        </form>
    </div>
</div>
