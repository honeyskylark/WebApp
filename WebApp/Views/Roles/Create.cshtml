@model WebApp.Models.Role
@{
    ViewBag.Title = "Добавление роли";
}

<ol class="breadcrumb">
    <li><a asp-action="Index" asp-controller="Home">Главная</a></li>
    <li><a asp-action="Index" asp-controller="Roles">Роли</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<div class="container-fluid">
    <form asp-action="Create">
        <div class="panel panel-primary">
            <div class="panel-heading">Добавление Роли</div>
            <div class="panel-body">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Роль</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" />
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Добавить</button>
        </div>
        <a asp-action="Index"class="btn btn-primary btn-lg btn-block" role="button">Назад</a>
    </form>
</div>