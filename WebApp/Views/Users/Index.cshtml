@model IEnumerable<WebApp.Models.User>
@{
    ViewData["Title"] = "Пользователи";
}
<ol class="breadcrumb">
    <li><a asp-action="Index" asp-controller="Home">Главная</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<div class="form-group">
    <a asp-action="Create" class="btn btn-primary btn-lg btn-block" role="button">Добавить Пользователя</a>
</div>
@*<div class="form-group">
    <a asp-action="Find" class="btn btn-primary btn-lg btn-block" role="button">Найти Пользователя</a>
</div>*@
<div class="panel panel-primary">
    <div class="panel-heading"><span class="glyphicon glyphicon-link"></span> Пользователи</div>
    <table class="table">
        <tr>
            <th>Имя</th>
            <th>Фамилия</th>
            <th>Действия</th>
        </tr>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.FirstName</td>
                <td>@user.LastName</td>
                <td>
                    <a asp-action="Details" asp-route-id="@user.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                    <a asp-action="Edit" asp-route-id="@user.Id"><span class="glyphicon glyphicon-pencil"></span></a> |
                    <a asp-action="Delete" asp-route-id="@user.Id"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </table>
</div>
