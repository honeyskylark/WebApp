@model IEnumerable<WebApp.Models.Catalog>

@{
    ViewData["Title"] = "Каталоги";
}

<ol class="breadcrumb">
    <li><a asp-action="Index" asp-controller="Home">Главная</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<div class="form-group">
    <a class="btn btn-primary btn-lg btn-block" asp-action="Create" role="button">Добавить Каталог</a>
</div>

<div class="panel panel-primary">
    <div class="panel-heading"><span class="glyphicon glyphicon-link"></span> Каталоги</div>
    <table class="table">
        <tr>
            <th>Каталог</th>
            <th>Подраздел</th>
            <th>Действия</th>
        </tr>

        @foreach (var catalog in Model)
        {
            <tr>
                <td>@catalog.Name</td>
                <td>@catalog.SubSection.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@catalog.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                    <a asp-action="Edit" asp-route-id="@catalog.Id"><span class="glyphicon glyphicon-pencil"></span></a> |
                    <a asp-action="Delete" asp-route-id="@catalog.Id"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </table>
</div>