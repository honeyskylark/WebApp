@model WebApp.Models.Catalog

@{
    ViewBag.Title = "Редактирование " + Model.Name;
}

<ol class="breadcrumb">
    <li><a asp-action="Index" asp-controller="Home">Главная</a></li>
    <li><a asp-action="Index" asp-controller="Catalogs">Каталоги</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<div class="container-fluid">
    <form asp-action="Edit">
        <div class="panel panel-primary">
            <div class="panel-heading">Редактирование Каталога</div>
            <div class="panel-body">
                <div class="validation" asp-validation-summary="ModelOnly"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label">Каталог</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="SubSectionId" class="control-label">Подраздел</label>
                    <select asp-for="SubSectionId" class="form-control" asp-items="ViewBag.SubSectionId"></select>
                    <span asp-validation-for="SubSectionId" class="text-danger"></span>
                </div>

            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Редактировать</button>
        </div>
        <a asp-action="Index" class="btn btn-primary btn-lg btn-block" role="button">Назад</a>
    </form>
</div>




