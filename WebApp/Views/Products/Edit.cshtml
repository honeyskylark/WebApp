@model WebApp.Models.Product

@{
    ViewBag.Title = "Редактирование " + Model.Name;
}
<ol class="breadcrumb">
    <li><a asp-action="Index" asp-controller="Home">Главная</a></li>
    <li><a asp-action="Index" asp-controller="Products">Товары</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<form asp-action="Edit">
    <div class="container-fluid">
        <div class="panel panel-primary">
            <div class="panel-heading">Редактирование</div>
            <div class="panel-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="Name" class="control-label">Название</label>
                    <input type="text" asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" />
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Описание</label>
                    <input type="text" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" />
                </div>
                <div class="form-group">
                    <label asp-for="Price" class="control-label">Цена</label>
                    <input type="text" asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" />
                </div>

                <div class="form-group">
                    <label asp-for="CurrencyId" class="control-label">Валюта</label>
                    <select asp-for="CurrencyId" class="form-control" asp-items="ViewBag.CurrencyId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="UnitId" class="control-label">Единица</label>
                    <select asp-for="UnitId" class="form-control" asp-items="ViewBag.UnitId"></select>
                </div>

                <div class="form-group">
                    <label asp-for="CatalogId" class="control-label">Каталог</label>
                    <select asp-for="CatalogId" class="form-control" asp-items="ViewBag.CatalogId"></select>
                </div>
            </div>
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary btn-lg btn-block">Редактировать</button>
        </div>
        <a asp-action="Index" class="btn btn-primary btn-lg btn-block" role="button">Назад</a>
    </div>
</form>






