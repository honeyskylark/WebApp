@model IEnumerable<WebApp.Models.Product>

@{
    ViewData["Title"] = "Товары";
}

<ol class="breadcrumb">
    <li><a asp-action="Index" asp-controller="Home">Главная</a></li>
    <li class="active">@ViewData["Title"]</li>
</ol>

<div class="form-group">
    <a class="btn btn-primary btn-lg btn-block" asp-action="Create" role="button">Добавить Товар</a>
</div>

<div class="panel panel-primary">
    <div class="panel-heading"><span class="glyphicon glyphicon-link"></span> Товары</div>
    <table class="table">
        <tr>
            <th>Товар</th>
            <th>Цена</th>
            <th>Валюта</th>
            <th>Действия</th>
        </tr>

        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Currency.Name</td>
                <td>
                    <a asp-action="Details" asp-route-id="@product.Id"><span class="glyphicon glyphicon-eye-open"></span></a> |
                    <a asp-action="Edit" asp-route-id="@product.Id"><span class="glyphicon glyphicon-pencil"></span></a> |
                    <a asp-action="Delete" asp-route-id="@product.Id"><span class="glyphicon glyphicon-trash"></span></a>
                </td>
            </tr>
        }
    </table>
</div>