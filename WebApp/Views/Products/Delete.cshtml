@model WebApp.Models.Product

@{
    ViewBag.Title = "Удалить товар " + Model.Name;
}
<ol class="breadcrumb">
    <li><a asp-action="Index" asp-controller="Home">Главная</a></li>
    <li><a asp-action="Index" asp-controller="Products">Товары</a></li>
    <li class="active">@ViewBag.Title</li>
</ol>

<div class="container-fluid">
    <div class="panel panel-primary">
        <div class="panel-heading">Товар @Model.Name</div>
        <div class="panel-body">
            <ul class="list-group">
                <li class="list-group-item">ID: @Model.Id</li>
                <li class="list-group-item">Название: @Model.Name</li>
                <li class="list-group-item">Описание: @Model.Description</li>
                <li class="list-group-item">Цена: @Model.Price</li>
                <li class="list-group-item">Валюта: @Model.Currency.Name</li>
                <li class="list-group-item">Единица: @Model.Unit.Name</li>
                <li class="list-group-item">Каталог: @Model.Catalog.Name</li>
            </ul>
        </div>
    </div>
    <form asp-action="Delete" method="post">
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="Удалить" />
        </div>
        <a asp-action="Index" class="btn btn-primary btn-lg btn-block" role="button">Назад</a>
    </form>

</div>