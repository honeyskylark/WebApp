<section id="catalog" class="catalog">
    <h1 class="wow bounceInDown">каталог</h1>
    <p class="large wow bounceIn">Ознакомьтесь с нашими товарами</p>
    <br />
    <div class="container-fluid">
        <div class="section-tabs">
            <div class="row">
                @foreach (var product in products)
                {
                    <div class="col-md-3">
                        <div class="thumbnail wow zoomIn">
                            <img src="http://via.placeholder.com/342x300">
                            <div class="caption">
                                <h3 class="product-name">@product.Name</h3>
                                @if (product.Description.Length <= 140)
                                {
                                    <p>@product.Description</p>

                                }
                                else
                                {
                                    <p class="product-description" >@product.Description.Substring(0, 140)...</p>
                                }
                                <h3 class="product-price">@product.Price @product.Currency.Name \ @product.Unit.Name</h3>
                               
                                <p>
                                    <a href="#" class="btn btn-primary" role="button">Заказать</a>
                                    <a href="#" class="btn btn-default" role="button">Подробнее</a>
                                </p>
                            </div>                         
                        </div>                      
                    </div>
                }

            </div>
        </div>
    </div>
</section>
